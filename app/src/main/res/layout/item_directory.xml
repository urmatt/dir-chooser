<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imageView_direcrory"
        android:src="@drawable/ic_folder_black_24dp"
        android:layout_weight="0.6" />

    <TextView
        android:id="@+id/text_directory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingLeft="@dimen/dialog_padding_left"
        android:paddingTop="@dimen/dialog_padding_top"
        android:paddingRight="@dimen/dialog_padding_right"
        android:paddingBottom="@dimen/dialog_padding_bottom"
        android:layout_weight="15" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imageView_select"
        android:src="@drawable/ic_done_black_24dp"
        android:layout_weight="1"
        android:layout_gravity="right" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#dadada" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imageView_open"
        android:layout_weight="1"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:layout_gravity="right" />
</LinearLayout>